# .env.example（复制为 .env 并填写实际值，加入 .gitignore）

# 数据库
DB_HOST=localhost
DB_PORT=5432
DB_NAME=qt_platform
DB_USER=qt_user
DB_PASSWORD=qt_dev_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=dev-only-secret-key-must-be-changed-in-production-64chars-long-xxx
JWT_ACCESS_EXPIRATION=7200
JWT_REFRESH_EXPIRATION=604800

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:5173/oauth/github/callback

# 邮件
MAIL_HOST=smtp.example.com
MAIL_PORT=465
MAIL_USERNAME=
MAIL_PASSWORD=

# 文件存储
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=1073741824
